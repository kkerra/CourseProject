<Window x:Class="TelemarketingApp.Desktop.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelemarketingApp.Desktop"
        mc:Ignorable="d"
        Title="Добавление нового клиента" 
        Height="700" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль для обязательных полей -->
        <Style x:Key="RequiredFieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text}" Value="*">
                    <Setter Property="Foreground" Value="{StaticResource MtsRed}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для подсказок -->
        <Style x:Key="HintTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource MtsDarkGray}"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource MtsLightGray}">
        <Border Style="{StaticResource CardStyle}" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="*"/>
                    <!-- Форма -->
                    <RowDefinition Height="Auto"/>
                    <!-- Кнопки -->
                    <RowDefinition Height="Auto"/>
                    <!-- Статус -->
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                           Text="Добавление нового клиента" 
                           Style="{StaticResource WindowTitleStyle}"
                           Margin="0,0,0,20"/>

                <!-- Форма ввода -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Фамилия -->
                        <TextBlock Text="Фамилия *" 
                                   Style="{StaticResource RequiredFieldLabelStyle}"/>
                        <TextBox x:Name="SurnameTextBox" 
                                 Style="{StaticResource MtsTextBox}"
                                 Margin="0,0,0,5">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Обязательное поле" Style="{StaticResource HintTextStyle}"/>

                        <!-- Имя -->
                        <TextBlock Text="Имя *" 
                                   Style="{StaticResource RequiredFieldLabelStyle}"/>
                        <TextBox x:Name="NameTextBox" 
                                 Style="{StaticResource MtsTextBox}"
                                 Margin="0,0,0,5">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Обязательное поле" Style="{StaticResource HintTextStyle}"/>

                        <!-- Отчество -->
                        <TextBlock Text="Отчество" 
                                   FontSize="14"
                                   Foreground="{StaticResource MtsDarkGray}"
                                   Margin="0,10,0,5"/>
                        <TextBox x:Name="PatronymicTextBox" 
                                 Style="{StaticResource MtsTextBox}"
                                 Margin="0,0,0,5">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Необязательное поле" Style="{StaticResource HintTextStyle}"/>

                        <!-- Адрес -->
                        <TextBlock Text="Адрес" 
                                   FontSize="14"
                                   Foreground="{StaticResource MtsDarkGray}"
                                   Margin="0,10,0,5"/>
                        <TextBox x:Name="AddressTextBox" 
                                 Style="{StaticResource MtsTextBox}"
                                 Margin="0,0,0,5">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Необязательное поле" Style="{StaticResource HintTextStyle}"/>

                        <!-- Телефон -->
                        <TextBlock Text="Номер телефона *" 
                                   Style="{StaticResource RequiredFieldLabelStyle}"/>
                        <TextBox x:Name="PhoneTextBox" 
                                 Style="{StaticResource MtsTextBox}"
                                 Margin="0,0,0,5">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Формат: +7 (XXX) XXX-XX-XX" Style="{StaticResource HintTextStyle}"/>

                        <!-- Статус взаимодействия -->
                        <TextBlock Text="Статус взаимодействия" 
                                   FontSize="14"
                                   Foreground="{StaticResource MtsDarkGray}"
                                   Margin="0,10,0,5"/>
                        <ComboBox x:Name="StatusComboBox" 
                                  Style="{StaticResource MtsComboBox}"
                                  Margin="0,0,0,20">
                            <ComboBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBoxItem Content="Новый" IsSelected="True"/>
                            <ComboBoxItem Content="В работе"/>
                            <ComboBoxItem Content="Завершен"/>
                            <ComboBoxItem Content="Отказ"/>
                        </ComboBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Кнопки -->
                <Border Grid.Row="2"
                        Background="{StaticResource MtsLightGray}"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,20,0,10">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Button x:Name="SaveButton" 
                                Content="💾 Сохранить" 
                                Style="{StaticResource MtsButton}"
                                Background="{StaticResource MtsGreen}"
                                Width="150"
                                Margin="0,0,15,0"
                                Click="SaveButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="CancelButton" 
                                Content="✕ Отмена" 
                                Style="{StaticResource MtsButton}"
                                Background="{StaticResource MtsDarkGray}"
                                Width="150"
                                Click="CancelButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Статус -->
                <Border Grid.Row="3"
                        Background="{StaticResource MtsWhite}"
                        CornerRadius="5"
                        Padding="10"
                        BorderBrush="{StaticResource MtsGray}"
                        BorderThickness="1">
                    <TextBlock x:Name="StatusText" 
                               Text="" 
                               Foreground="{StaticResource MtsDarkGray}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>

<Window x:Class="TelemarketingApp.Desktop.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelemarketingApp.Desktop"
        mc:Ignorable="d"
         Title="Список клиентов" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource MtsLightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Панель фильтров -->
            <RowDefinition Height="Auto"/>
            <!-- Панель навигации -->
            <RowDefinition Height="*"/>
            <!-- Список клиентов -->
            <RowDefinition Height="Auto"/>
            <!-- Статус -->
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Grid.Row="0"
                   Text="Список клиентов" 
                   Style="{StaticResource WindowTitleStyle}"
                   Margin="20,20,20,10"/>

        <!-- Панель фильтров и сортировки -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}"
                Margin="20,0,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Поиск по ФИО -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Поиск:" 
                           FontSize="14"
                           Foreground="{StaticResource MtsDarkGray}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <TextBox x:Name="SearchTextBox" 
                         Grid.Row="0" Grid.Column="1"
                         Style="{StaticResource MtsTextBox}"
                         Margin="0,0,20,0"
                         TextChanged="SearchTextBox_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Фильтр по статусу -->
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="Статус:" 
                           FontSize="14"
                           Foreground="{StaticResource MtsDarkGray}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <ComboBox x:Name="StatusFilterComboBox" 
                          Grid.Row="0" Grid.Column="3"
                          Style="{StaticResource MtsComboBox}"
                          Margin="0,0,20,0"
                          SelectionChanged="StatusFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="Все статусы" Tag=""/>
                    <ComboBoxItem Content="Новый" Tag="Новый"/>
                    <ComboBoxItem Content="В работе" Tag="В работе"/>
                    <ComboBoxItem Content="Завершен" Tag="Завершен"/>
                    <ComboBoxItem Content="Отказ" Tag="Отказ"/>
                </ComboBox>

                <!-- Кнопка сброса фильтров -->
                <Button x:Name="ClearFiltersButton" 
                        Grid.Row="0" Grid.Column="4"
                        Content="🗑️ Сбросить фильтры" 
                        Style="{StaticResource MtsButton}"
                        Background="{StaticResource MtsDarkGray}"
                        Click="ClearFiltersButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Панель сортировки -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Сортировка:" 
                           FontSize="14"
                           Foreground="{StaticResource MtsDarkGray}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <ComboBox x:Name="SortComboBox" 
                          Grid.Row="2" Grid.Column="1"
                          Width="200"
                          Style="{StaticResource MtsComboBox}"
                          Margin="0,0,10,0"
                          SelectionChanged="SortComboBox_SelectionChanged">
                    <ComboBoxItem Content="По фамилии (А-Я)" Tag="SurnameAsc"/>
                    <ComboBoxItem Content="По фамилии (Я-А)" Tag="SurnameDesc"/>
                    <ComboBoxItem Content="По имени (А-Я)" Tag="NameAsc"/>
                    <ComboBoxItem Content="По имени (Я-А)" Tag="NameDesc"/>
                    <ComboBoxItem Content="По статусу" Tag="StatusAsc"/>
                    <ComboBoxItem Content="По ID (возраст.)" Tag="IdAsc"/>
                    <ComboBoxItem Content="По ID (убыв.)" Tag="IdDesc"/>
                </ComboBox>

                <!-- Кнопки направления сортировки -->
                <StackPanel Grid.Row="2" Grid.Column="3" 
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="SortAscButton" 
                            Content="↑ По возрастанию" 
                            Style="{StaticResource MtsButton}"
                            Background="{StaticResource MtsBlue}"
                            Margin="0,0,10,0"
                            Click="SortDirectionButton_Click"
                            Tag="Asc"/>

                    <Button x:Name="SortDescButton" 
                            Content="↓ По убыванию" 
                            Style="{StaticResource MtsButton}"
                            Background="{StaticResource MtsBlue}"
                            Click="SortDirectionButton_Click"
                            Tag="Desc"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="2" 
                Background="{StaticResource MtsRed}"
                Padding="15"
                Margin="20,0,20,10"
                CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка добавления клиента -->
                <Button x:Name="AddClientButton" 
                        Content="➕ Добавить клиента" 
                        Style="{StaticResource MtsButton}"
                        Background="{StaticResource MtsGreen}"
                        Click="AddClientButton_Click"/>

                <!-- Кнопки управления -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="RefreshButton" 
                            Content="🔄 Обновить" 
                            Style="{StaticResource MtsButton}"
                            Background="{StaticResource MtsBlue}"
                            Margin="0,0,10,0"
                            Click="RefreshButton_Click"/>

                    <Button x:Name="CloseButton" 
                            Content="✕ Закрыть" 
                            Style="{StaticResource MtsButton}"
                            Background="{StaticResource MtsDarkGray}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Список клиентов -->
        <Border Grid.Row="3" 
                Style="{StaticResource CardStyle}"
                Margin="20,0,20,10"
                Padding="0">
            <DataGrid x:Name="ClientsDataGrid"
                      Style="{StaticResource MtsDataGrid}"
                      ColumnHeaderStyle="{StaticResource MtsDataGridHeader}"
                      CellStyle="{StaticResource MtsDataGridCell}"
                      Sorting="ClientsDataGrid_Sorting">

                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush" Value="{StaticResource MtsGray}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="MinHeight" Value="40"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource MtsLightGray}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource MtsLightRed}"/>
                                <Setter Property="Foreground" Value="{StaticResource MtsWhite}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding ClientId}"
                                        Width="70"
                                        CanUserSort="True"/>
                    <DataGridTextColumn Header="Фамилия" 
                                        Binding="{Binding Surname}"
                                        Width="150"
                                        CanUserSort="True"/>
                    <DataGridTextColumn Header="Имя" 
                                        Binding="{Binding Name}"
                                        Width="150"
                                        CanUserSort="True"/>
                    <DataGridTextColumn Header="Отчество" 
                                        Binding="{Binding Patronymic}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Телефон" 
                                        Binding="{Binding PhoneNumber}"
                                        Width="180"/>
                    <DataGridTextColumn Header="Адрес" 
                                        Binding="{Binding Address}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Статус" 
                                        Binding="{Binding InteractionStatus}"
                                        Width="120"
                                        CanUserSort="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="{StaticResource MtsWhite}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding InteractionStatus}" Value="Новый">
                                        <Setter Property="Background" Value="{StaticResource MtsGreen}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding InteractionStatus}" Value="Потенциальный">
                                        <Setter Property="Background" Value="{StaticResource MtsBlue}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding InteractionStatus}" Value="Активный">
                                        <Setter Property="Background" Value="{StaticResource MtsPurple}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding InteractionStatus}" Value="Неактивный">
                                        <Setter Property="Background" Value="{StaticResource MtsOrange}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MtsDataGridCell}">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Статусная панель -->
        <Border Grid.Row="4" 
                Background="{StaticResource MtsWhite}" 
                Padding="15"
                BorderBrush="{StaticResource MtsGray}" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" 
                           Text="Загрузка клиентов..." 
                           Foreground="{StaticResource MtsDarkGray}"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           x:Name="FilterStatusText" 
                           Text="" 
                           Foreground="{StaticResource MtsRed}"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>

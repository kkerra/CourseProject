<Window x:Class="TelemarketingApp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelemarketingApp.Desktop"
        mc:Ignorable="d"
        Title="Телемаркетинг - Выбор тарифа" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource MtsLightGray}">

    <Grid>
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource MtsRed}" Padding="25">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Доступные тарифы" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Контейнер для тарифов -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,20,0,0">

            <!-- Тариф "Дома отлично" -->
            <Border Style="{StaticResource CardStyle}"
                    Width="380" 
                    Height="520" 
                    Margin="20">
                <StackPanel Margin="25">
                    <!-- Заголовок тарифа -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="ДОМА" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource MtsDarkGray}"/>
                        <TextBlock Text="ОТЛИЧНО" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource MtsRed}"
                                   Margin="0,-5,0,0"/>
                    </StackPanel>

                    <!-- Разделитель -->
                    <Rectangle Height="3" Fill="{StaticResource MtsRed}" Margin="0,0,0,25"/>

                    <!-- Список преимуществ -->
                    <StackPanel Margin="0,0,0,30">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Безлимитный мобильный интернет" 
                                       FontSize="15" 
                                       TextWrapping="Wrap"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="1000 минут" 
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="100 SMS" 
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Домашний интернет 100 Мбит/с" 
                                       FontSize="15" 
                                       TextWrapping="Wrap"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="220+ ТВ каналов" 
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Бейдж "Рекомендуем" -->
                    <Border Background="{StaticResource MtsRed}" 
                            CornerRadius="20" 
                            Padding="15,8"
                            HorizontalAlignment="Center">
                        <TextBlock Text="РЕКОМЕНДУЕМ" 
                                   Foreground="White" 
                                   FontSize="14"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Тариф "Дома супер" -->
            <Border Style="{StaticResource CardStyle}"
                    Width="380" 
                    Height="520" 
                    Margin="20">
                <StackPanel Margin="25">
                    <!-- Заголовок тарифа -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="ДОМА" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource MtsDarkGray}"/>
                        <TextBlock Text="СУПЕР" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource MtsRed}"
                                   Margin="0,-5,0,0"/>
                    </StackPanel>

                    <!-- Разделитель -->
                    <Rectangle Height="3" Fill="{StaticResource MtsRed}" Margin="0,0,0,25"/>

                    <!-- Список преимуществ -->
                    <StackPanel Margin="0,0,0,30">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Безлимитный мобильный интернет" 
                                       FontSize="15" 
                                       TextWrapping="Wrap"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Безлимитные минуты" 
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Безлимитные SMS" 
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Домашний интернет 100 Мбит/с" 
                                       FontSize="15" 
                                       TextWrapping="Wrap"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✓" 
                                       Foreground="{StaticResource MtsGreen}" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="220+ ТВ каналов" 
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Бейдж "Популярный" -->
                    <Border Background="{StaticResource MtsRed}" 
                            CornerRadius="20" 
                            Padding="15,8"
                            HorizontalAlignment="Center">
                        <TextBlock Text="ПОПУЛЯРНЫЙ" 
                                   Foreground="White" 
                                   FontSize="14"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Кнопка авторизации -->
        <Border Grid.Row="2" 
                Background="{StaticResource MtsWhite}" 
                Padding="30"
                Margin="0,30,0,0"
                BorderBrush="{StaticResource MtsGray}" 
                BorderThickness="0,1,0,0">
            <StackPanel HorizontalAlignment="Center">
                <!-- Форма авторизации -->
                <Border Background="{StaticResource MtsLightGray}" 
                        CornerRadius="10" 
                        Padding="25"
                        Width="400"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Авторизация" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource MtsRed}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <StackPanel>
                            <TextBlock Text="Логин" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"
                                       Foreground="{StaticResource MtsDarkGray}"/>
                            <TextBox x:Name="LoginTextBox" 
                                     Style="{StaticResource MtsTextBox}"
                                     Height="40"/>

                            <TextBlock Text="Пароль" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Margin="0,15,0,5"
                                       Foreground="{StaticResource MtsDarkGray}"/>
                            <PasswordBox x:Name="PasswordBox" 
                                         Height="40"
                                         FontSize="14"
                                         Padding="10"
                                         BorderBrush="{StaticResource MtsGray}"
                                         BorderThickness="1"
                                         Margin="0,0,0,20"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Кнопка -->
                <Button x:Name="AuthButton" 
                        Click="AuthButton_Click"
                        Content="ВОЙТИ В СИСТЕМУ" 
                        Style="{StaticResource MtsButton}"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="50"
                        Width="300"
                        Padding="40,0"/>
            </StackPanel>
        </Border>

        <!-- Футер -->
        <Border Grid.Row="3" 
                Background="{StaticResource MtsWhite}" 
                Padding="15"
                BorderBrush="{StaticResource MtsGray}" 
                BorderThickness="0,1,0,0">
            <TextBlock Text="Система управления заявками" 
                       Foreground="{StaticResource MtsDarkGray}"
                       HorizontalAlignment="Center"
                       FontSize="12"/>
        </Border>

        <!-- Сетка для расположения элементов -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>

<Window x:Class="TelemarketingApp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelemarketingApp.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0078D7" Padding="20">
            <TextBlock Text="Выберите тариф" 
                       Foreground="White" 
                       FontSize="28" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Контейнер для тарифов -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- Тариф "Дома отлично" -->
            <Border Width="320" 
                    Height="450" 
                    Background="White" 
                    CornerRadius="10"
                    Margin="20"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                      Opacity="0.1" 
                                      ShadowDepth="2"/>
                </Border.Effect>

                <StackPanel Margin="25">
                    <TextBlock Text="Дома отлично" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#0078D7"
                               Margin="0,0,0,15"/>

                    <Rectangle Height="3" Fill="#0078D7" Margin="0,0,0,20"/>

                    <StackPanel Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="Безлимитный мобильный интернет" 
                                       FontSize="14" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="1000 минут" 
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="100 SMS" 
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="Домашний интернет 100 Мбит/с" 
                                       FontSize="14" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="220+ ТВ каналов" 
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#0078D7" 
                            CornerRadius="5" 
                            Margin="0,20,0,0"
                            Height="40"
                            VerticalAlignment="Bottom">
                        <TextBlock Text="Рекомендуем" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Тариф "Дома супер" -->
            <Border Width="320" 
                    Height="450" 
                    Background="White" 
                    CornerRadius="10"
                    Margin="20"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                      Opacity="0.1" 
                                      ShadowDepth="2"/>
                </Border.Effect>

                <StackPanel Margin="25">
                    <TextBlock Text="Дома супер" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#FF5722"
                               Margin="0,0,0,15"/>

                    <Rectangle Height="3" Fill="#FF5722" Margin="0,0,0,20"/>

                    <StackPanel Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="Безлимитный мобильный интернет" 
                                       FontSize="14" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="Безлимитные минуты" 
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="Безлимитные SMS" 
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="Домашний интернет 100 Мбит/с" 
                                       FontSize="14" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="220+ ТВ каналов" 
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="#FF5722" 
                            CornerRadius="5" 
                            Margin="0,20,0,0"
                            Height="40"
                            VerticalAlignment="Bottom">
                        <TextBlock Text="Популярный" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Кнопка авторизации -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="20"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0">
            <Button x:Name="AuthButton" 
                    Click="AuthButton_Click"
                    Content="Авторизоваться" 
                    Background="#0078D7"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Height="50"
                    Width="250"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation To="#005A9E" 
                                                Duration="0:0:0.2" 
                                                Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation To="#0078D7" 
                                                Duration="0:0:0.2" 
                                                Storyboard.TargetProperty="Background.Color"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
        </Border>

    </Grid>
</Window>

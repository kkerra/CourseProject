<Window x:Class="TelemarketingApp.Desktop.EmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelemarketingApp.Desktop"
        mc:Ignorable="d"
        Title="Управление сотрудниками" 
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner">

    <Grid Background="{StaticResource MtsLightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Grid.Row="0"
                   Text="Управление сотрудниками" 
                   Style="{StaticResource WindowTitleStyle}"
                   Margin="20,20,20,10"/>

        <!-- Панель управления -->
        <Border Grid.Row="1" 
                Background="{StaticResource MtsRed}"
                Padding="15"
                Margin="20,0,20,10"
                CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                <!-- Кнопка добавления сотрудника -->
                <Button x:Name="AddEmployeeButton" 
                        Content="➕ Добавить сотрудника" 
                        Style="{StaticResource MtsButton}"
                        Background="{StaticResource MtsGreen}"
                        Margin="0,0,10,0"
                        Click="AddEmployeeButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Кнопка обновления -->
                <Button x:Name="RefreshButton" 
                        Content="🔄 Обновить" 
                        Style="{StaticResource MtsButton}"
                        Background="{StaticResource MtsBlue}"
                        Margin="0,0,10,0"
                        Click="RefreshButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Кнопка закрытия -->
                <Button x:Name="CloseButton" 
                        Content="✕ Закрыть" 
                        Style="{StaticResource MtsButton}"
                        Background="{StaticResource MtsDarkGray}"
                        Click="CloseButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>

        <!-- Список сотрудников -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}"
                Margin="20,0,20,10"
                Padding="0">
            <DataGrid x:Name="EmployeesDataGrid"
                      Style="{StaticResource MtsDataGrid}"
                      ColumnHeaderStyle="{StaticResource MtsDataGridHeader}"
                      CellStyle="{StaticResource MtsDataGridCell}"
                      SelectionMode="Single">

                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush" Value="{StaticResource MtsGray}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="MinHeight" Value="40"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource MtsLightGray}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource MtsLightRed}"/>
                                <Setter Property="Foreground" Value="{StaticResource MtsWhite}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="ActionButtonStyle" TargetType="Button">
                        <Setter Property="Width" Value="30"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="{StaticResource MtsWhite}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" 
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource MtsGray}"/>
                                <Setter Property="Foreground" Value="{StaticResource MtsDarkGray}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding EmployeeId}"
                                        Width="70"/>
                    <DataGridTextColumn Header="Фамилия" 
                                        Binding="{Binding Surname}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Имя" 
                                        Binding="{Binding Name}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Отчество" 
                                        Binding="{Binding Patronymic}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Логин" 
                                        Binding="{Binding Login}"
                                        Width="150"/>
                    <DataGridTextColumn Header="Email" 
                                        Binding="{Binding Email}"
                                        Width="200"/>
                    <DataGridTextColumn Header="Роль" 
                                        Binding="{Binding RoleName}"
                                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="{StaticResource MtsWhite}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RoleId}" Value="2">
                                        <Setter Property="Background" Value="{StaticResource MtsPurple}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RoleId}" Value="1">
                                        <Setter Property="Background" Value="{StaticResource MtsBlue}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MtsDataGridCell}">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Статус" 
                                        Binding="{Binding Status}"
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Активен">
                                        <Setter Property="Foreground" Value="{StaticResource MtsGreen}"/>
                                        <Setter Property="Background" Value="{StaticResource MtsLightGray}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Неактивен">
                                        <Setter Property="Foreground" Value="{StaticResource MtsDarkGray}"/>
                                        <Setter Property="Background" Value="{StaticResource MtsLightGray}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Уволен">
                                        <Setter Property="Foreground" Value="{StaticResource MtsRed}"/>
                                        <Setter Property="Background" Value="{StaticResource MtsLightGray}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MtsDataGridCell}">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGridTextColumn.CellStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Действия" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Кнопка редактирования -->
                                    <Button x:Name="EditButton" 
                                            Content="✏️" 
                                            ToolTip="Редактировать сотрудника"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Background="{StaticResource MtsBlue}"
                                            Click="EditButton_Click"/>

                                    <!-- Кнопка увольнения/восстановления -->
                                    <Button x:Name="FireButton" 
                                            Content="🚪" 
                                            ToolTip="Уволить сотрудника"
                                            Background="{StaticResource MtsOrange}"
                                            Click="FireButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                                                <Setter Property="Background" Value="{StaticResource MtsOrange}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Уволен">
                                                        <Setter Property="Content" Value="↺"/>
                                                        <Setter Property="Background" Value="{StaticResource MtsGreen}"/>
                                                        <Setter Property="ToolTip" Value="Восстановить сотрудника"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- Кнопка удаления -->
                                    <Button x:Name="DeleteButton" 
                                            Content="🗑️" 
                                            ToolTip="Удалить сотрудника"
                                            Background="{StaticResource MtsRed}"
                                            Click="DeleteButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                                                <Setter Property="Background" Value="{StaticResource MtsRed}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Уволен">
                                                        <Setter Property="Background" Value="{StaticResource MtsDarkGray}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Статусная панель -->
        <Border Grid.Row="3" 
                Background="{StaticResource MtsWhite}" 
                Padding="15"
                BorderBrush="{StaticResource MtsGray}" 
                BorderThickness="0,1,0,0">
            <TextBlock x:Name="StatusText" 
                       Text="Загрузка сотрудников..." 
                       Foreground="{StaticResource MtsDarkGray}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
